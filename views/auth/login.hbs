  <div class="container my-5">
    <div class="jumbotron">
      <h1>LOGIN</h1>
      <br>
      <form action="/auth/login" method="POST" id="formLogin" class="form" role="form">

        <div class="form-group">
          <input id="email" name='email' placeholder="email" class="form-control" type="text" required>
        </div>

        <div class="form-group">
          <input id="password" name='password' placeholder="password" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <button class="btn btn-success my-3">
            Login
          </button>
        </div>
      </form>

      <hr>
      <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/auth/signup'">Ir a Register</button>
      </div>
    </div>
  </div>


  